{
  "name": "vamosjuntas",
  "version": "1.1.1",
  "description": "vamosjuntas: An Ionic project",
  "engines": {
    "node": "4.3.1"
  },
  "dependencies": {
    "bower": "^1.3.3",
    "cordova": "*",
    "ionic": "*",
    "ios-sim": "*",
    "express": "^4.13.4",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "shelljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^1.10.2",
    "eslint-config-airbnb": "^1.0.2",
    "eslint-config-angular": "^0.4.0",
    "eslint-plugin-angular": "^0.14.0",
    "eslint-plugin-react": "^3.11.2",
    "jasmine": "^2.3.2",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.15",
    "karma-chrome-launcher": "^0.2.1",
    "karma-cli": "*",
    "karma-jasmine": "^0.3.6",
    "karma-phantomjs-launcher": "^0.2.1",
    "phantomjs": "^1.9.18",
    "protractor": "^3.1.1"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "cordova-plugin-statusbar",
    "ionic-plugin-keyboard",
    "cordova-plugin-geolocation"
  ],
  "cordovaPlatforms": [
    "ios",
    "android"
  ],
  "scripts": {
    "postinstall": "bower install && npm run build-css",
    "build-css": "node-sass --include-path scss scss/ionic.app.scss www/css/ionic.app.css && node-sass --include-path scss --output-style compressed scss/ionic.app.scss www/css/ionic.app.min.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "setup": "npm install -g cordova && npm install -g bower && npm install && npm run commit-msg && bower install && npm run android && npm run ios",
    "test": "karma start karma.conf.js",
    "setup-functional": "webdriver-manager update && webdriver-manager start",
    "functional": "protractor www/test/functional/conf.js",
    "lint": "eslint www/js/**/*.js www/test/**/*.js",
    "ci": "karma start karma.conf.js --single-run",
    "commit-msg": "cp .commit-msg .git/hooks/commit-msg",
    "android": "cordova platform add android",
    "ios": "cordova platform add ios",
    "preserve": "node www/conf/stubserver.js > /dev/null 2>&1 &",
    "serve": "ionic serve",
    "serve-background": "screen -d -m -L ionic serve --nolivereload --nobrowser"
  }
}
